Leyenda:

S 			: Program Principal
ESTRUCT 	: Estructura 
DEC 		: Declaracion de variables
TIPO 		: Tipo de variables  
LISTIDENT 	: Lista de Identificadores
INSTR  		: Intruccion del programa
ASSIGN  	: Asignacion
IN 			: Entrada
OUT 		: Salida
CONDIC 		: Condicional
ITERIND 	: Iteracion indeterminada
ITERDET 	: Iteracion determinada
EXPR  		: Expresion
IDENTIF 	: Identificador
NUM 		: Numeros
BOOL 		: Boolean
LIEN 		: Lienzo

Gramatica:

S-> ESTRUCT

ESTRUCT -> { DEC | INSTR }
	| { INSTR }

DEC -> DEC TIPO LISTIDENT 
	| TIPO LISTIDENT

TIPO -> !
	| %
	| @

LISTIDENT -> LISTIDENT VARIABLE
	| VARIABLE

VARIABLE -> IDENTIFIER

INSTR -> INSTR ; INTRS 
	| ASSIGN
	| IN
	| OUT
	| CONDIC
	| ITERIND
	| ITERDET
	| ESTRUCT

ASSIGN -> VARIABLE = EXPR

IN -> READ VARIABLE

OUT -> WRITE EXPR

CONDIC -> ( EXPR ? INSTR )
	| ( EXPR ? INSTR : INSTR )  

ITERIND -> [ EXPR | INSTR ]

ITERDET -> [ EXPR .. EXPR | INSTR ]
	| [ VARIABLE : EXPR .. EXPR | INSTR ]

EXPR -> IDENTIF 
	| EXPR + EXPR
	| EXPR - EXPR
 	| EXPR * EXPR
 	| EXPR / EXPR
	| EXPR % EXPR
	| - EXPR
	| (EXPR)
	| EXPR /\ EXPR
 	| EXPR \/ EXPR
	| ^EXPR
	| EXPR & EXPR
	| EXPR ~ EXPR
	| $ EXPR
	| EXPR '
	| EXPR < EXPR
	| EXPR <= EXPR
	| EXPR > EXPR
	| EXPR >= EXPR
	| EXPR = EXPR
	| EXPR /= EXPR

IDENTIF -> NUM
	| BOOL
	| LIEN
	| VARIABLE

NUM -> NUMBER

BOOL-> TRUE
	| FALSE

LIEN-> </>
	| < >
	| <\>
	| <|>
	| #
	| <_>
	| <->