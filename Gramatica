Leyenda:

S 			: Program Principal
ESTRUCT 	: Estructura 
DECLAR 		: Declaracion de variables
TYPE 		: Tipo de variables  
LISTIDENT 	: Lista de Identificadores
INSTR  		: Intruccion del programa
ASSIGN  	: Asignacion
CONDIC 		: Condicional
ITERIND 	: Iteracion indeterminada
ITERDET 	: Iteracion determinada
EXPR  		: Expresion
NUM 		: Numeros
BOOL 		: Boolean
LIEN 		: Lienzo

Gramatica:

S-> ESTRUCT

ESTRUCT -> { DECLAR | INSTR }
	| { INSTR }

DECLAR -> DECLAR TYPE LISTIDENT 
	| TYPE LISTIDENT

TYPE -> !
	| %
	| @

LISTIDENT -> LISTIDENT VARIABLE
	| VARIABLE

VARIABLE -> IDENTIFIER

INSTR -> INSTR ; INSTR
	| ASSIGN
	| READ VARIABLE
	| WRITE EXPR
	| CONDIC
	| ITERIND
	| ITERDET
	| ESTRUCT

ASSIGN -> VARIABLE = EXPR

CONDIC -> ( EXPR ? INSTR )
	| ( EXPR ? INSTR : INSTR )  

ITERIND -> [ EXPR | INSTR ]

ITERDET -> [ EXPR .. EXPR | INSTR ]
	| [ VARIABLE : EXPR .. EXPR | INSTR ]

EXPR -> EXPR + EXPR
	| EXPR - EXPR
 	| EXPR * EXPR
 	| EXPR / EXPR
	| EXPR % EXPR
	| - EXPR
	| (EXPR)
	| EXPR /\ EXPR
 	| EXPR \/ EXPR
	| EXPR^
	| EXPR & EXPR
	| EXPR ~ EXPR
	| $ EXPR
	| EXPR '
	| EXPR < EXPR
	| EXPR <= EXPR
	| EXPR > EXPR
	| EXPR >= EXPR
	| EXPR = EXPR
	| EXPR /= EXPR
	| NUM
	| BOOL
	| LIEN
	| VARIABLE

NUM -> NUMBER

BOOL-> TRUE
	| FALSE

LIEN-> </>
	| < >
	| <\>
	| <|>
	| #
	| <_>
	| <->